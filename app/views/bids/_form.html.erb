<%= form_for(@bid) do |f| %>
  <% if @bid.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bid.errors.count, "error") %> prohibited this bid from being saved:</h2>

      <ul>
      <% @bid.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :logo %><br>
    <%# f.text_field :logo %>
    <select id="bid_logo" name="bid[logo]">
      <option value="gcs-logo.png">GC Sourcing</option>
      <option value="cc-logo.png">Cabinets & Coffee</option>
    </select>
  </div>
  <div class="field">
    <%= f.label :client_name %><br>
    <%= f.text_field :client_name %>
  </div>
  <div class="field">
    <%= f.label :project_name %><br>
    <%= f.text_field :project_name %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :cabinet_cost %><br>
    <%= f.text_field :cabinet_cost %>
  </div>
  <div class="field">
    <%= f.label :cabinet_delivery %><br>
    <%= f.check_box :cabinet_delivery %>
  </div>
  <div class="field">
    <%= f.label :cabinet_removal %><br>
    <%= f.check_box :cabinet_removal %>
  </div>
  <div class="field">
    <%= f.label :cabinet_installation %><br>
    <%= f.check_box :cabinet_installation %>
  </div>
  <div class="field">
    <%= f.label :cabinet_tax %><br>
    <%= f.check_box :cabinet_tax %>
  </div>
  <div class="field">
    <%= f.label :granite_cost %><br>
    <%= f.text_field :granite_cost %>
  </div>
  <!--<div class="field">
    <%# f.label :tax_cost %><br>
    <%# f.text_field :tax_cost %>
  </div>-->
  <div class="field">
    <%= f.label :total_cost %><br>
    <%= f.text_field :total_cost %>
  </div>
  <div class="field">
    <%= f.label :conditions %><br>
    <%= f.text_area :conditions %>
  </div>
  <div class="field">
    <%= f.label :cabinet_mix %><br>
    <%= f.text_area :cabinet_mix %>
  </div>
  <div class="field">
    <%= f.label :cabinet_id %><br>
    <%= f.collection_select :cabinet_id, Cabinet.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :granite_id %><br>
    <%= f.collection_select :granite_id, Granite.all, :id, :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
