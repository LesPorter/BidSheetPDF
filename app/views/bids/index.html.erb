<h1>Bids</h1>

<table>
  <thead>
    <tr>
      <th>Logo</th>
      <th>Client name</th>
      <th>Project name</th>
      <th>Date</th>
      <th>Cabinet cost</th>
      <th>Granite cost</th>
      <!--<th>Tax cost</th>-->
      <th>Total cost</th>
      <!--<th>Conditions</th>-->
      <!--<th>Cabinet mix</th>-->
      <th>Cabinet style</th>
      <th>Granite style</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.logo %></td>
        <td><%= bid.client_name %></td>
        <td><%= bid.project_name %></td>
        <td><%= bid.date %></td>
        <td><%= bid.cabinet_cost %></td>
        <td><%= bid.granite_cost %></td>
        <!--<td><%# bid.tax_cost %></td>-->
        <td><%= bid.total_cost %></td>
        <!--<td><%# bid.conditions %></td>-->
        <!--<td><%# bid.cabinet_mix %></td>-->
        <td><%= bid.cabinet.name %></td>
        <td><%= bid.granite.name %></td>
        <td><%= link_to 'Show', bid %></td>
        <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
        <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

