<h1>Listing granites</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @granites.each do |granite| %>
      <tr>
        <td><%= granite.name %></td>
        <td><%= granite.image %></td>
        <td><%= link_to 'Show', granite %></td>
        <td><%= link_to 'Edit', edit_granite_path(granite) %></td>
        <td><%= link_to 'Destroy', granite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Granite', new_granite_path %>
